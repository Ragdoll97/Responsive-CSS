*
    margin: 0;
    padding 0;
    box-sizing: border-box
    font-family: 'Poppins', sans-serif;
.mtop48
    margin-top:48px

body 
    display: flex
    justify-content: center
    align-items: center
    background: #232427

.container
    display flex
    justify-content: center
    align-items: center
    flex-wrap: wrap
    max-width: 1200px
    padding 100px 0 50px
    .card
        position: relative
        min-width: 320px
        height: 500px
        box-shadow: inset 5px 5px 5px rgba(0,0,0,0.2),
        inset -5px -5px 15px rgba(255,255,255,0.1),
        5px 5px 15px rgba(0,0,0,0.3),
        -5px -5px 15px rgba(255,255,255,0.1)
        margin 30px
        .box
            position: absolute
            top 20px
            left 20px
            right: 20px
            bottom: 20px
            background: #2a2b2f
            border-radius: 15px
            border 2px solid #1e1f23
            box-shadow: 0 20px 50px rgba(0,0,0,0.5)
            display flex
            justify-content: center
            align-items: center
            transition: transform 0.4s, box-shadow 0.4s
            .content
                padding 20px 
                text-align: center
                .icon
                    position: relative
                    width: 80px
                    height: 80px
                    margin: 0 auto
                    display: flex
                    justify-content: center
                    align-items: center
                    border-radius: 50%
                    margin-bottom: 10px
                    .fa
                        color: #fff
                        font-size: 2em
                h3
                    font-size: 1.8em
                    color #fff
                    font-weight:  300
                h4
                    color #fff
                    font-size: 3em
                    font-weight: 700
                h4.sup
                    font-size: 0.75em
                    font-weight: 300
                ul
                    position relative
                    li
                        list-style: none;
                        color: #fff
                        margin 5px 0
                        i.fa-check
                            color #0f0
                        i.fa-times
                            color #f00
               a
                    position relative
                    display: inline-block
                    padding 8px 20px
                    margin-top: 15px
                    border-radius: 20px
                    text-decoration: none
                    color #fff
                    font-weight: 400
.toggle
    position absolute
    top 20px
    left calc(50% -30px)
    width : 60px
    height: 60px
    background: #fff
    border-radius: 6px
    cursor pointer
    justify-content: center
    display flex
    align-items: center

.toggle::before
    content: '\f185'
    font-family: fontAwesome;
    font-size 24px

body.light .toggle
    background: #154f56
    color #fff

body.light .toggle::before
    content: '\f186'

body.light
    background: #ebf5fc
    
body.light .container .card
    box-shadow: inset 10px 10px 10px rgba(0,0,0,0.1),
    inset -10px -10px 15px rgba(255,255,255,0.5),
    10px 10px 15px rgba(0,0,0,0.1),
    -10px -10px 15px rgba(255,255,255,0.5)
        

body.light .container .card .box
    background: #ebf5fc
    border none
    box-shadow 0 10px 20px rgba(0,0,0,0.1)

body.light .container .card:hover .box
    
    box-shadow 0 20px 40px rgba(0,0,0,0.2)


.container .card .box .content h3,
.container .card .box .content h4,
.container .card .box .content ul li
    color #32a3b1

.container .card:nth-child(1) .box .content a,
.container .card:nth-child(1) .box .content .icon
    background-color: #2196f3
    box-shadow: 0 10px 20px rgba(0,0,0,0.2)

.container .card:nth-child(2) .box .content a,
.container .card:nth-child(2) .box .content .icon
    background-color: #e91e93
    box-shadow: 0 10px 20px rgba(0,0,0,0.2)

.container .card:nth-child(3) .box .content a,
.container .card:nth-child(3) .box .content .icon
    background-color: #FF77D7
    box-shadow: 0 10px 20px rgba(0,0,0,0.2)
                    
                     
.container .card:hover .box
    transform: translateY(-50px)
    box-shadow: 0 40px 70px rgba(0,0,0,0.5)

// Login Css

section
    position relative
    min-width: 50vh
    display: flex
    justify-content: center
    align-items: center
    padding 20px
    transition: 0.5s
    .containerLogin
        position relative
        width: 800px
        height: 500px
        background: #fff
        box-shadow: 0 15px 50px rgba(0,0,0,0.1)
        overflow: hidden
        .user
            position: absolute
            top 0
            left 0
            width 100%
            height: 100%
            display flex
            .imgBox
                position: relative 
                width: 50%
                height: 100%
                transition: 0.5s
                img
                    position absolute
                    top: 0
                    left: 0
                    width: 100%
                    height: 100%
                    object-fit: cover 
            .formBox 
                position relative 
                width 50%
                height: 100%
                background: #fff
                display flex
                justify-content: center
                align-items: center
                padding 40px
                transition: 0.5s
                h2
                    font-size: 18px
                    font-weight: 800
                    text-transform: uppercase
                    letter-spacing: 2px
                    text-align: center
                    margin-bottom: 10px
                    color: #555
                input 
                    width: 100%
                    padding 10px
                    background: #f5f5f5
                    color #333
                    border: none
                    outline none
                    font-size: 14px
                    margin: 8px 0
                    letter-spacing: 1px
                    font-weight: 300
                input[type="submit"]
                    max-width: 125px
                    background: #FF77D7
                    color #fff
                    cursor pointer
                    font-size: 14px
                    font-weight: 500
                    letter-spacing: 1px
                    transition: 0.5s
                .signup
                    position relative
                    margin-top 20px
                    font-size: 12px
                    letter-spacing: 1px
                    color #555
                    text-transform: uppercase
                    font-weight: 300
                    a
                        font-weight: 600
                        text-decoration: none 
                        color #577eff
        .SignUpBox
            pointer-events: none

section .containerLogin .user.SignInBox .formBox input[type="submit"]
    background: #e57

//Seccion que maneja la transi贸n del formulario iniciar sesi贸n
section .containerLogin.active .SignUpBox
    pointer-events: initial 

section .containerLogin .SignUpBox .formBox
    top: 100%

section .containerLogin.active .SignUpBox .formBox 
    top:0

section .containerLogin .SignUpBox .imgBox 
    top: -100%
    transition: 0.5s

section .containerLogin.active .SignUpBox .imgBox 
    top:0

//Seccion que maneja la transi贸n del formulario registro
section .containerLogin .SignInBox .formBox
    top: 0

section .containerLogin.active .SignInBox .formBox 
    top: 100%

section .containerLogin .SignInBox .imgBox
    top: 0
    transition: 0.5s

section .containerLogin.active .SignInBox .imgBox 
    top: -100%

//Secci贸n que controla el active de section

body.active
    background: #f5f6

@media only screen and (max-width 780px)
    section
        margin-top: 50%;
        margin-top: 100px;
        .containerLogin
            max-width 90%
            .imgBox
                display none
            .user
                .formBox
                    width 100%
            .signIn
                .formBox
                    top -100%
    section .containerLogin.active .SignInBox .formBox 
        top: -100%                



