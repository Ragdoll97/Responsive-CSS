* 
    margin: 0
    padding: 0
    box-sizing: border-box
    list-style: none
    text-decoration: none
    font-family: 'Poppins', sans-serif
    scroll-behavior: smooth

.toggle
    position fixed
    top 30px
    right 30px
    width 50px
    height: 50px
    background: #000 url('/images/menu.png')
    background-size: 30px
    background-position: center
    background-repeat: no-repeat
    cursor pointer
    transition: 0.2s
    z-index: 1000

.toggle.active
    background: #000 url('/images/close.png')
    background-size: 25px
    background-position: center
    background-repeat: no-repeat
    transition: 0.2s

.btn-1
    --c: #000;
    color: var(--c);
    border: 0.1em solid #fff;
    border-radius: 0.7em;
    height: 3em;
    letter-spacing: 0.1em;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: 0.5s;
.btn-1:hover {
    color: #fff;
}
.banner .contentBox a span
    position: absolute;
    width: 25%;
    height: 100%;
    background-color: var(--c);
    transform: translateY(150%);
    border-radius: 50%;
    left: calc((var(--n) - 1) * 25%);
    transition: 0.5s;
    transition-delay: calc((var(--n) - 1) * 0.1s);
    z-index: -1;
    &:nth-child(1)
        --n: 1;
    &:nth-child(2)
        --n: 2;
    &:nth-child(3)
        --n: 3;
    &:nth-child(4)
        --n: 4;
.banner .contentBox a:hover span
    transform: translateY(0) scale(2);





section
    padding 100px
    min-height: 100vh
    //CSS que maneja el banner
.banner .contentBox, .sidebar
    position absolute
    top: 0
    right 0
    width: calc(100% - 500px)
    height: 100%
    display flex
    justify-content: center
    align-items: center
    padding 100px
.banner
    position relative
    width 100%
    .imgSidebar
        position absolute
        top: 0
        left: 0
        width 500px
        height: 100%
        img
            position absolute
            top: 0
            left: 0
            width 100%
            height: 100%
            object-fit: cover
    .contentBox
        .logoText
            position: absolute
            top: 40px
            left 100px
            font-size: 1.2em
            text-transform: uppercase
            letter-spacing: 1px
            background: #333
            color #fff
            padding 0 5px
        h4
            font-size: 1.5em
            color #333
            font-weight: 300
            span
                color #DF3E1C
                font-size: 1.5em
                font-weight: 700
        h2
            font-size: 3em
            margin 20px 0
            font-weight: 300
        .sci
            position absolute
            left: 100px
            bottom 20px
            display flex
            justify-content: center
            align-items: center
            li
                margin-right: 10px
                a
                    i
                        transform: scale(0.5)
                        opacity: 0.7
                        font-size: 3.5em
                        color #000
                        &:hover
                            transform: scale(1)
                            opacity 1
//Aqui termina el css del banner
//CSS que maneja la sección About / Sobre Mi

.about
    background: #000
    .content
        display flex
        margin-top: 40px
        justify-content: space-between
        .textBox
            max-width: 49%
            p
                color #fff
                span
                    color #DF3E1C
        .imgBox
            margin-left: 40px
            img
                width 100%
//Aquí termina el css de about

//CSS que maneja la seccion servicios
.services
    .content
        display: flex
        justify-content: center
        flex-direction: row
        flex-wrap: wrap
        .servicesBox
            padding 40px 20px
            max-width: 340px
            margin: 20px
            transition: 0.2s
            text-align: center
            background: #E2E2E2
            &:hover
                color #fff 
                filter: invert(1)
            &:hover h2
                filter: invert(1)
            &:hover p
                filter: invert(1)
            img
                max-width: 80px
                transition: 0.2s
            h2
                margin-top: 20px
                margin-bottom: 20px
                font-size: 20px
                font-weight: 600
                transition: 0.2s
            p
                margin 0
                transition: 0.2s
//Aqui termina el CSS de servicios

//CSS que maneja la seccion proyectos
.works
    padding 0px !important
    .content
        display flex
        justify-content: center
        flex-direction: row
        flex-wrap: wrap
        
        .workBox
            position relative
            width 265px
            height: 265px
            margin 10px
            transition: 0.5s
            text-align: center
            .imgBox,
            .textBox
                position: absolute
                top 0
                left 0
                width: 100%
                height: 100%
                display: flex
                justify-content: center
                align-items: center
                img
                    position: absolute
                    top 0
                    left 0
                    width: 100%
                    height: 100%
                    object-fit: cover
            .textBox
                background: #000
                opacity: 0
                transition: 0.5s
                &:hover
                    opacity: .9
                h3
                    color #fff
                    text-transform: uppercase
                    letter-spacing: 1px
                    font-size: 1em
                    font-weight: 300

//Aqui termina el CSS de la seccion proyectos

//CSS que maneja la seccion contacto
.contact
    background: #000
    display flex
    justify-content: center
    align-items: center
    flex-direction: column

    .contactForm
        position relative
        width 700px
        margin-top: 20px
        .row
            width 100%
            display flex
            .col50
                width 50%
                margin 10px
            .col100
                width 100%
                margin 10px
                text-align: center
            input,
            textarea
                width 100%
                padding 10px
                border: none
                outline: none
                background: #111
                color #fff
                resize: none
                font-size: 16px
            textarea
                height: 100px
            input[type="submit"]
                background: #DF3E1C
                color #fff
                padding 10px 30px
                display inline-block
                font-weight: 500
                letter-spacing: 2px
                cursor pointer
                max-width: 150px
                &:hover
                    background: #fff
                    color #DF3E1C
//Aqui termina el CSS de la seccion contacto
//CSS que maneja colores y tamaños de los titulos
.title
    width 100%
    text-align: center
    h2
        position relative
        color #DF3E1C
        font-size: 1.8em
        font-weight: 700
        letter-spacing: 1px
    p   
        max-width: 700px
        display inline-block
.title.white p,
.title.white h2
    color #fff
.title.white h2::before
    background: #DF3E1C

//---------------------------------------------------
.title h2::before
    content: '' 
    position: absolute
    left 50%
    transform: translateX(-50%)
    bottom: -10px
    width 60px
    height: 4px
    background: #000        
p 
    font-size: 1.1em
    margin 20px 0
    font-weight: 300
.btn
    background:  #DF3E1C
    color #fff
    padding 10px 30px
    display: inline-block
    font-weight: 500
    letter-spacing: 2px
.sidebar
    position fixed
    background: #000
    display flex
    justify-content: center
    align-items: center
    transition: 0.5s
    padding 40px
    z-index: 100
    right: -100%
    ul
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column
        li
            a
                color #fff
                font-size: 2em
                font-weight: 300
                margin 10px 0
                letter-spacing: 2px
                text-transform: uppercase
                &:hover
                    color #DF3E1C
.sidebar.active
    right: 0


/* CSS con todo el diseño del sidenav    */
.sidenav
    position fixed
    z-index 997
    width 70px
    margin-top 150px
    box-shadow: 2px 2px 8px 0px rgba(0,0,0,.4)
    .sidelinks
        height: 60px
        position relative
        a
            display block
            color #fff
            width 100%
            height: 100%
            line-height: 60px
            padding-left: 25%
            border-bottom: 1px solid rgba(0,0,0,.4)
            transition: all .3s linear
            &:hover
                z-index: 1
                width 200px
                border-bottom: 1px solid rgba(0,0,0,.5)
                box-shadow: 0 0 1px 1px rgba(0,0,0,.3)
                span
                    display block
                    padding-left: 30%
            i
                position absolute
                top 17px
                left 20px
                font-size: 27px
            span
               font-weight: 400
               letter-spacing: 1px
               text-transform: uppercase
               display: none

.sidenav li:nth-child(1) a
    background: #ff0000
.sidenav li:nth-child(2) a
    background: #4367b2
.sidenav li:nth-child(3) a
    background: #333
.sidenav li:nth-child(4) a
    background: #2867b2

@media (max-width: 991px)
    .banner .contentBox, .sidebar
        width: 100%
        padding 40px
    .banner
        .imgSidebar
            display none
    .banner .contentBox .logoText
        left 40px
    .toggle
        right: 40px
    .banner .contentBox .sci
        left 40px
    section
        padding 40px
    .about .content
        flex-direction: column
    .about .content .textBox
        min-width: 100%
        width 100%
    .about .content
        margin-top: 0
        display flex
        justify-content: space-between
    .about .content .imgBox
        margin-left: 0
    .services .content .servicesBox
        padding 30px 20px
        max-width: 340px
        margin 10px
    .contact .contactForm
        width 100%
    .contact .contactForm .row
        width 100%
        display flex
        flex-wrap: wrap
    .contact .contactForm .row .col50
        width 100%
        margin 10px
    .sidebar ul li a
        font-size: 1.5em
    .services .content .servicesBox,
    .works .content .workBox
        padding 30px 20px
        max-width: 100%
        width 100%
        margin 10px 0

    
        
